<%= simple_form_for(@authorization) do |form| %>
  <p>
    <%= params[:client_id] %> wants to access your data with the scope: <%= @authorization.scope %>
  </p>
  <%= hidden_field_tag :state, params[:state] %>
  <%= hidden_field_tag :redirect_uri, params[:redirect_uri] %>
  <%= hidden_field_tag :response_type, params[:response_type] %>
  <%= form.input :scope, as: :hidden %>
  <%= form.input :client_id, as: :hidden %>
  <%= form.submit %>
<% end %>
