<%= link_to 'Add song', new_admin_song_path, class: :add %>
<ul class="songs sortable resource-list" data-update-url="<%= sort_admin_songs_url %>">
  <% @songs.each do |song| %>
    <%= content_tag(:li, id: dom_id(song)) do %>
      <%= link_to song.title, edit_admin_song_path(song) %>
      <%= link_to t('helpers.submit.song.delete'),
                  [:admin, song],
                  method: :delete,
                  class: :delete,
                  data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
</ul>
