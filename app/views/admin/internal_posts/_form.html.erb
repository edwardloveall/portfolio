<%= simple_form_for([:admin, @internal_post]) do |form| %>
  <%= form.error_notification %>

  <div class="form-inputs">
    <%= form.input :title %>
    <%= form.input :slug %>
    <%= form.input :teaser %>
    <%= form.input :body %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>
