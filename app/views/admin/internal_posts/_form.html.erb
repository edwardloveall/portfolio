<%= simple_form_for([:admin, @internal_post]) do |form| %>
  <%= form.error_notification %>

  <fieldset>
    <legend>Create an Internal Post</legend>
    <%= form.input :title %>
    <%= form.input :slug %>
    <%= form.input :teaser %>
    <%= form.input :body %>
  </fieldset>

  <%= form.button :submit %>
<% end %>
