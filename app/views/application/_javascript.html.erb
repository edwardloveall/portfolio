<%= javascript_include_tag :application %>

<%= yield :javascript %>

<%= render 'analytics' %>

<% if Rails.env.test? %>
  <%= javascript_tag do %>
    $.fx.off = true;
    $.ajaxSetup({ async: false });
  <% end %>
<% end %>

<script type="text/javascript">
var sly;
$(document).ready(function() {
  var slyOptions = {
    horizontal: true,
    itemNav: 'forceCentered',
    mouseDragging: true,
    smart: true,
    speed: 300,
    touchDragging: true
  };
  sly = new Sly('nav.main', slyOptions).init();
  sly.activate(1, true);
  $('nav.main a').on('click', function(e) {
    sly.activate($(this));
    e.preventDefault();
  });
});
</script>
